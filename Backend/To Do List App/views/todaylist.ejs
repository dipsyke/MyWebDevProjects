        </div>
        <% for (let i = 0; i < todaylist.length; i++){ %>
            <input class= "list" type="checkbox"> <%= todaylist[i] %><br/></input>
        <% } %>
        <%- include ("partials/footer.ejs") %>
    </div>

</main>
