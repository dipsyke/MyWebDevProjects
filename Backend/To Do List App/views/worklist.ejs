<!DOCTYPE html>
<html lang="en">

<%- include ("partials/head.ejs") %>

<body>
<main>


    <div class="container">
        <%- include ("partials/header.ejs") %>

        <div class="navbar">
            <a id="work" href="/work">Work</a>
            <a id="today" href="/today">Today</a>
        </div>
        <div class="title">
            <h1> Work List</h1>
        </div>
        <div class="toDoList">
            <form action="/work" method="POST">
                <input type="text" name="newItemWork" placeholder="New Item">
                <input type="submit" value="+">
            </form>

            <% for (let i = 0; i < worklist.length; i++){ %>
                <input class = "list" type="checkbox"> <%= worklist[i] %><br/></input>
            <% } %>
        </div>

        <%- include ("partials/footer.ejs") %>
    </div>

</main>
</body>

</html>


